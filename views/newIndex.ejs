<!DOCTYPE html>
<html>
  <head>
    <link href="https://fonts.googleapis.com/css?family=Catamaran:200,400,700,800,900&display=swap" rel="stylesheet">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/pixi.js/5.1.3/pixi.min.js"></script>
    <link rel="stylesheet" type="text/css" href="/homeStyle.css">
    <script src= "/socket.io/socket.io.js"></script>
    <script type='text/javascript'>var POST = <%- data %>;</script>
  </head>
  <body>
    <canvas id="font"></canvas>
    <div class="center_box">
      <div class="login_box white_box">
        <div class="logo">OBSTAR</div>
        <div id="connectin_data">
          <div id="connect">Connection</div>
          <div id="messages"></div>
          <form method="post" action='/connect' class='form_connect'>
            <div class="input_text_box">
              <div class='icon_basicShoot'>
                <img id='icon_basic' src="/pic/BASIC.svg"/>
                <img id='icon_bullet' src="/pic/BULLET.svg"/>
              </div>
              <input class='input_text pseudo' type="text" name="id" placeholder="E-mail">
              <input class='input_text' type="password" name="password" placeholder="Password">
              <img id='icon_quade' src="/pic/QUADE.svg">
              <label>Keep Me Logged In</label><input class='input-keep-connection' type='checkbox' name='keep_connection' value='false'>
            </div>
            <input class='login' type="submit" value="Login !">
          </form>
        </div>
      </div>
      <div class='register_box white_box'>
        <div class='in_rbox'>
          <div class='back_login' onmousedown="changeFrontPageState('login')">Go back to Connection</div>
          <div id="rmessages"></div>
          <form method="post" action='/registering'>
            <input id='registe_email' class='input_text r' type="text" name="email" placeholder="E-mail">
            <div class='pseudo_memo memo'>
              Choose a pseudo between 5-15 characters, with lowercase letter from a - z, number from 0 - 9 and for space, use _
            </div>
            <input id='registe_pseudo' class='input_text r' type="text" name="id" placeholder="Pseudo">
            <div class='pass_memo memo'>
              Your password must have a length of 9, having one uppercase letter and one number.
            </div>
            <input id='regist_password' class='input_text r' type="password" name="password" placeholder="Password">
            <input id='Retyp_pass' class='input_text r' type="password" name="confirm_pass" placeholder="Retype Password">
            <div class='pseudo_memo memo'>
              A confirmation Email will be send to activate your account !
            </div>
            <input class='registe' type="submit" value="Send Now !">
          </form>
        </div>
        <div class='registe_info'>
          <div id="welcome_text">No account ?  Want to join OBstar ?
          Create an account to access our server and
          play online with the rest of the community !</div>
          <button onmousedown="changeFrontPageState('registe')">Registe now !</button>
        </div>
      </div>
    </div>
    <script src="/font.js"></script>
    <script src='/dataHandling.js'></script>
    <script src="/register.js"></script>
  </body>
</html>
